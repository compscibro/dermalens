# DermaLens Backend - DynamoDB Version
# Uses IAM roles for AWS authentication - NO ACCESS KEYS NEEDED!

# Project Configuration
PROJECT_NAME=DermaLens
VERSION=1.0.0
API_V1_PREFIX=/api/v1
DEBUG=True

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS - Add your frontend URLs
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# AWS Configuration
# When running on AWS EC2/ECS/Lambda, IAM role provides credentials automatically
# NO AWS_ACCESS_KEY_ID or AWS_SECRET_ACCESS_KEY needed!
AWS_REGION=us-east-1

# For local testing with DynamoDB Local
# AWS_DYNAMODB_ENDPOINT=http://localhost:8000

# DynamoDB Table Names
DYNAMODB_USERS_TABLE=dermalens-users
DYNAMODB_SCANS_TABLE=dermalens-scans
DYNAMODB_PLANS_TABLE=dermalens-treatment-plans
DYNAMODB_CHAT_TABLE=dermalens-chat-messages

# S3 Configuration (also uses IAM role)
S3_BUCKET_NAME=dermalens-images
S3_PRESIGNED_URL_EXPIRATION=3600

# NanoBanana AI (or mock for testing)
NANOBANANA_API_KEY=your-nanobanana-api-key-or-mock
NANOBANANA_BASE_URL=https://api.nanobanana.ai/v1

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# Treatment Plan Settings
MIN_TREATMENT_DAYS=14
MAX_TREATMENT_DAYS=28
SCORE_DECLINE_THRESHOLD=10.0
SEVERE_IRRITATION_THRESHOLD=20.0

# Scan Settings
MIN_SCAN_INTERVAL_DAYS=7
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=["image/jpeg","image/jpg","image/png"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
